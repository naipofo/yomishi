{{#*inline "Tags"}}
    {{#each tags}}
        <span class="tag" data-category={{this.category}}>{{this.name}}</span>
    {{/each}}
    {{#each meta}}
        <span class="tag">{{this.dictionary}}<span>{{#if (lookup this.data.entry.Frequency 0)}}
                {{lookup this.data.entry.Frequency 0}}
            {{else}}
                {{lookup this.data.entry.Frequency 1}}
            {{/if}}
        </span></span>
    {{/each}}
{{/inline}}

{{#*inline "RubyHtml"}}
    {{#each ruby}}
        {{#if (isArray this)}}
            <ruby>
                {{lookup this 0}}
                <rt>
                    {{lookup this 1}}
                </rt>
            </ruby>
        {{else}}
            {{this}}
        {{/if}}
    {{/each}} 
{{/inline}}

{{#*inline "RubyPlain"}}
    {{~#each ruby~}}
        {{~#if (isArray this)}} {{lookup this 0}}[{{lookup this 1}}]
        {{~else~}}
            {{this}}
        {{~/if~}}
    {{~/each~}} 
{{/inline}}

{{#*inline "InflectionRules"}}
    {{~#each inflection_rules~}}
        <i class="rule">{{this}}</i>
    {{~/each~}}
{{/inline}}

{{#*inline "GlossaryEntry"}}
    <ul>
        {{#each glossary}}
            <li>
                {{{formatGlossary this}}}
            </li>
        {{/each}}
    </ul>
{{/inline}}

{{#*inline "GlossaryList"}}
    <ol>
        {{#each glossaries}}
            <li>
                {{> Tags}}
                {{> GlossaryEntry this.term}}
            </li>
        {{/each}}
    </ol>
{{/inline}}

{{#*inline "Reading"}}
    {{~#each ruby~}}
        {{~#if (isArray this)~}}
            {{lookup this 1}}
        {{~else~}}
            {{this}}
        {{~/if~}}
    {{~/each~}} 
{{/inline}}

{{#*inline "Expression"}}
    {{~#each ruby~}}
        {{~#if (isArray this)~}}
            {{lookup this 0}}
        {{~else~}}
            {{this}}
        {{~/if~}}
    {{~/each~}} 
{{/inline}}


{{#*inline "FullGlossary"}}
    <header><span class="expression">{{> RubyHtml }}</span>
        {{~> InflectionRules ~}}
        {{~> Tags ~}}
    </header>
    {{~> GlossaryList ~}}    
{{/inline}}
    
