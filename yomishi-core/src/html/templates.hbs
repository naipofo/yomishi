{{#*inline "single-glossary"~}}
    <div>{{~>tags-meta~}}<span class="tag dict">{{dictionary}}</span></div>
    {{~#if (eq 1 (len term.glossary))~}}
            {{{formatGlossary (lookup term.glossary 0)}}}
    {{~else~}}
        <ul>
            {{~#each term.glossary~}}
                <li>{{{formatGlossary this}}}</li>
            {{~/each~}}
        </ul>
    {{~/if~}}
{{~/inline}}

{{#*inline "tags-meta"}}
    {{~#each tags~}}
        <span class="tag" data-category={{this.category}}>
            {{~this.name~}}
        </span>
    {{~/each~}}

    {{~#each meta~}}
        <span class="tag"><span class="label">{{this.dictionary}}</span><span class="contnet">
            {{~#if (lookup this.data.entry.Frequency 0)~}}
                {{lookup this.data.entry.Frequency 0}}
            {{~else~}}
                {{lookup this.data.entry.Frequency 1}}
            {{~/if~}}
        </span></span>
    {{~/each~}}
{{/inline}}
    
