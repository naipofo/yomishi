{{#*inline "glossary-list"~}}
    {{~#if (eq 1 (len glossaries))~}}
        {{~#with (lookup this.glossaries 0)~}}
            {{> single-glossary}}
        {{~/with~}}
    {{~else~}}
        <ol>
            {{~#each glossaries~}}
                <li>
                    {{~> single-glossary~}}
                </li>
            {{~/each~}}
        </ol>
    {{~/if~}}
{{~/inline}}

