{
    "manifest_version": 3,
    "name": "Yomishi",
    "description": "Yomishi web extension",
    "version": "1.0",
    "action": {
        "default_popup": "action-popup.html"
    },
    "options_ui": {
        "page": "configuration.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*",
                "file://*/*"
            ],
            "js": ["content-script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "popup.css",
                "popup.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}
