{
    "manifest_version": 3,
    "name": "Yomishi",
    "description": "Yomishi web extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*",
                "file://*/*"
            ],
            "js": ["content-script.js"]
        }
    ]
}
